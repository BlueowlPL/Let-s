{{ 'product-card.css' | asset_url | stylesheet_tag }}
<div class="swiper-slide product-card"> 
  <div class="product-type">
    <span>{{ product_card.type }}</span>
  </div>
  {%- if product_card.featured_image -%}
  {%- assign height = product_card.featured_image.width | divided_by: product_card.featured_image.aspect_ratio | round -%}
  {{ product_card.featured_image | image_url: width: 400 | image_tag:
    loading: 'lazy',
    height: height,
    sizes: "100vw",
    widths: '375, 400, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
  }}
  {%- else -%}
    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
  {%- endif -%}
  <h5>{{ product_card.title }}</h5>
  {% if product_card.price %}
    <div class="product-price">
      {% if product_card.compare_at_price > product_card.price %}
      <span>
        <svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.25 11H12.5L12.5 16.25M21.75 12C21.75 17.1086 17.6086 21.25 12.5 21.25C7.39137 21.25 3.25 17.1086 3.25 12C3.25 6.89137 7.39137 2.75 12.5 2.75C17.6086 2.75 21.75 6.89137 21.75 12Z" stroke="#21145F" stroke-width="1.5" stroke-linecap="square"/>
          <rect x="11.875" y="7.375" width="1.25" height="1.25" fill="black" stroke="black" stroke-width="0.25"/>
        </svg>
      </span>
      <span>{{ product_card.compare_at_price | money }}</span>
      {% endif %}
      <span>{{ product_card.price | money }}</span>
    </div>
  {% endif %}
  <form method="post" action="/cart/add">
    <input type="hidden" name="id" value="{{ product_card.variants.first.id }}" />
    <input type="submit" value="Add to cart" class="btn" />
  </form>
</div>
{% assign slides = section.blocks %}
<div class="slider">
  <h2>{{ section.settings.section_title }}</h2>
  <p>{{ section.settings.section_description }}</p>

  {% for block in section.blocks %}
    {% if block.type == 'slide' %}
      <div class="slide">
        <img src="{{ block.settings.slide_image | img_url }}" alt="Slide Image">
        <h3>{{ block.settings.slide_title }}</h3>
        <p>{{ block.settings.slide_description }}</p>
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Slider",
    "settings": [
      {
        "type": "text",
        "label": "Section Title",
        "id": "section_title"
      }, {
        "type": "text",
        "label": "Section Description",
        "id": "section_description"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "label": "Slide Image",
            "id": "slide_image"
          }, {
            "type": "text",
            "label": "Slide Title",
            "id": "slide_title"
          }, {
            "type": "textarea",
            "label": "Slide Description",
            "id": "slide_description"
          }
        ]
      }
    ]
  }
{% endschema %}
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for slide in section.blocks %}
        <div class="swiper-slide">
            {%- if slide.settings.slide_image -%}
            {%- assign height = slide.settings.slide_image.width | divided_by: slide.settings.slide_image.aspect_ratio | round -%}
            {{ slide.settings.slide_image | image_url: width: 3840 | image_tag:
              loading: 'lazy',
              height: height,
              sizes: "100vw",
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            }}
          {%- else -%}
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
          <div class="slider-text">
            {%- if slide.settings.slide_title -%}
              <h2 class="{{ slide.settings.heading_size }}">{{ slide.settings.slide_title | escape }}</h2>
            {%- endif -%}
            {%- if slide.settings.slide_description -%}
              <p>{{ slide.settings.slide_description }}</p>
            {%- endif -%}
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev custom-swiper-button-prev">
      {%- assign height = section.settings.arrow_icon_prev.width | divided_by: section.settings.arrow_icon_prev.aspect_ratio | round -%}
        {{ section.settings.arrow_icon_prev | image_url: width: 42 | image_tag:
            loading: 'lazy',
            height: height
        }}
    </div>
    <div class="swiper-button-next custom-swiper-button-next">
        {%- assign height = section.settings.arrow_icon_next.width | divided_by: section.settings.arrow_icon_next.aspect_ratio | round -%}
        {{ section.settings.arrow_icon_next | image_url: width: 42 | image_tag:
            loading: 'lazy',
            height: height
        }}
    </div>
  </div>

{% schema %}
{
  "name": "Hero Slider",
  "settings": [
    {
      "type": "image_picker",
      "label": "Ikona strzałki - prawa",
      "id": "arrow_icon_next",
      "info": "Wgraj plik ikony strzałki prawej"
    }, {
      "type": "image_picker",
      "label": "Ikona strzałki - lewa",
      "id": "arrow_icon_prev",
      "info": "Wgraj plik ikony strzałki lewej"
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "category": "ADVANCED LAYOUT"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "label": "Obraz slajdu",
          "id": "slide_image"
        },
        {
          "type": "text",
          "label": "Nagłówek slajdu",
          "id": "slide_title"
        },
        {
          "type": "textarea",
          "label": "Opis slajdu",
          "id": "slide_description"
        }, {
          "type": "select",
          "label": "Wielkość nagłówka",
          "id": "heading_size",
          "options": [
            {
              "value": "h3",
              "label": "Mały"
            },
            {
              "value": "h2",
              "label": "Średni"
            },
            {
              "value": "h1",
              "label": "Duży"
            }
          ],
          "default": "h2",
          "label": "Średni"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.swiper-container {
  width: 100%;
  max-width: 100%;
  margin: 0 auto;
  max-height: 100%;
  overflow: hidden;
  position: relative;
}

.swiper-slide {
  width: 100% !important; 
  text-align: center;
  display: flex !important;
  align-items: center;
  justify-content: center;
  position: relative; 
}

.slider-text {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.slider-text h2

.swiper-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.swiper-button-next, .swiper-button-prev {
  display: flex !important;
}

.swiper-button-next {
  right: 48px !important;
}

.swiper-button-prev {
  left: 48px !important;  
}

.swiper-button-next:after, .swiper-button-prev:after {
  content: '' !important; 
}

.swiper-container, .swiper-wrapper, .swiper-slide {
  max-height: 653px; 
}

{% endstylesheet %}

{% javascript %}
window.addEventListener('DOMContentLoaded', function() {
  var swiper = new Swiper('.swiper-container', {
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
      disabledClass: 'swiper-button-disabled',
      hiddenClass: 'swiper-button-hidden',
      prevEl: '.custom-swiper-button-prev',
      nextEl: '.custom-swiper-button-next',
    },
    loop: true,
  });
});
{% endjavascript %}
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for slide in section.blocks %}
        <div class="swiper-slide">
            {%- if slide.settings.slide_image -%}
            {%- assign height = slide.settings.slide_image.width | divided_by: slide.settings.slide_image.aspect_ratio | round -%}
            {{ slide.settings.slide_image | image_url: width: 3840 | image_tag:
              loading: 'lazy',
              height: height,
              sizes: "100vw",
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            }}
          {%- else -%}
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev custom-swiper-button-prev">
      <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <use xlink:href="{{ section.settings.arrow_icon }}"></use>
      </svg>
    </div>
    <div class="swiper-button-next custom-swiper-button-next">
        {%- assign height = section.settings.arrow_icon_next.width | divided_by: section.settings.arrow_icon_next.aspect_ratio | round -%}
        {{ section.settings.arrow_icon_next | image_url: width: 42 | image_tag:
            loading: 'lazy',
            height: height
        }}
    </div>
  </div>

{% schema %}
{
  "name": "Hero Slider",
  "settings": [
    {
      "type": "text",
      "label": "Section Title",
      "id": "section_title"
    },
    {
      "type": "text",
      "label": "Section Description",
      "id": "section_description"
    },
    {
      "type": "image_picker",
      "label": "Arrow Icon",
      "id": "arrow_icon_next",
      "info": "Select an SVG icon for the arrow buttons"
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "category": "ADVANCED LAYOUT"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "label": "Slide Image",
          "id": "slide_image"
        },
        {
          "type": "text",
          "label": "Slide Title",
          "id": "slide_title"
        },
        {
          "type": "textarea",
          "label": "Slide Description",
          "id": "slide_description"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.swiper-container {
  width: 100%;
  max-width: 100%;
  margin: 0 auto;
  max-height: 100%;
  overflow: hidden;
  position: relative;
}

.swiper-slide {
  width: 100% !important; 
  text-align: center;
  display: flex !important;
  align-items: center;
  justify-content: center;
}

.swiper-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.swiper-button-next, .swiper-button-prev {
  display: flex !important;
}

{% endstylesheet %}

{% javascript %}
window.addEventListener('DOMContentLoaded', function() {
  var swiper = new Swiper('.swiper-container', {
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
      disabledClass: 'swiper-button-disabled',
      hiddenClass: 'swiper-button-hidden',
      prevEl: '.custom-swiper-button-prev',
      nextEl: '.custom-swiper-button-next',
    },
    loop: true,
  });
});
{% endjavascript %}
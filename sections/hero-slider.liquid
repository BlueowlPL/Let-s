  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for slide in section.blocks %}
        <div class="swiper-slide">
            {%- if slide.settings.slide_image -%}
            {%- assign height = slide.settings.slide_image.width | divided_by: slide.settings.slide_image.aspect_ratio | round -%}
            {{ slide.settings.slide_image | image_url: width: 3840 | image_tag:
              loading: 'lazy',
              height: height,
              sizes: "100vw",
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            }}
          {%- else -%}
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
            <h3 class="slider-title">{{ slide.slide_title }}</h3>
            <p class="slider-description">{{ slide.slide_description }}</p>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>

{% schema %}
  {
    "name": "Hero Slider",
    "settings": [
      {
        "type": "text",
        "label": "Section Title",
        "id": "section_title"
      }, {
        "type": "text",
        "label": "Section Description",
        "id": "section_description"
      }
    ],
    "presets": [
    {
    "name": "Hero Slider",
    "category": "ADVANCED LAYOUT"
    }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "label": "Slide Image",
            "id": "slide_image"
          }, {
            "type": "text",
            "label": "Slide Title",
            "id": "slide_title"
          }, {
            "type": "textarea",
            "label": "Slide Description",
            "id": "slide_description"
          }
        ]
      }
    ]
  }
{% endschema %}

{% stylesheet %}
.swiper-container {
  width: 100%;
  max-width: 100%;
  margin: 0 auto;
  max-height: 653px;
}

.swiper-slide {
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

{% endstylesheet %}

{% javascript %}
window.addEventListener('DOMContentLoaded', function() {
  var swiper = new Swiper('.swiper-container', {
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
});
{% endjavascript %}
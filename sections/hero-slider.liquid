{% stylesheet %}
.section-wrapper {
  position: relative
}
  
.mainSwiper { 
  width: 100%;
  max-width: 100%;
  margin: 0 auto;
  max-height: 100%;
  overflow: hidden;
  position: relative; 

  .swiper-wrapper > div {
    width:100% !important;
  }

  .swiper-slide {
    text-align: center;
    display: flex !important;
    align-items: center;
    justify-content: center;
    position: relative; 
  }

  .slider-text {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .slider-text h2 {
    text-shadow: 0px 4px 10px rgba(0, 0, 0, 0.23);
    margin-bottom: 16px;
    margin-top: 0;
  }

  .slider-text h4 {
    text-shadow: 0px 4px 10px rgba(0, 0, 0, 0.23);
    margin-bottom: 0;
    margin-top: 0;
  }

  .heroSlider-button {
    margin-top: 24px; 
  }

  .heroSlider-button a {
    border: 1px solid rgba(255, 255, 255, 0.40);
    background: rgba(255, 255, 255, 0.40);
    box-shadow: 0px 1px 1px 0px rgba(0, 0, 0, 0.12);
    font-family: Lato;
    font-weight: 800; 
  }
  
  .heroSlider-button a:hover {
    border: 1px solid rgba(255, 255, 255, 0.80);
    background: rgba(255, 255, 255, 0.80); 
  }
  
  .heroSlider-button a:after, .heroSlider-button a:hover:after { 
    box-shadow: none !important;
  }
  
  .swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    max-height: 653px;
  }
  
  .swiper-slide .img-overlay { 
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    display: block; 
  }
  
  .swiper-button-next, .swiper-button-prev {
    display: flex !important;
  }
  
  .swiper-pagination {
    display: none; 
  }
  
  .swiper-pagination-bullet {
    width: 10px !important;
    height: 10px !important;
    background: transparent !important;
    border: 1px solid #C5BEC5; 
  }
  
  .swiper-pagination-bullet-active {
    background: #262329!important;
    border: none; 
  }
  
  @media (max-width: 992px) {
    .swiper-button-next, .swiper-button-prev {
      display: none !important;
    }
  
    .swiper-pagination {
      display: block !important; 
    }
  }
  
  .swiper-button-next {
    right: 48px !important;
  }
  
  .swiper-button-prev {
    left: 48px !important;  
  }
  
  .swiper-button-next:after, .swiper-button-prev:after {
    content: '' !important; 
  }
  
  .swiper-container, .swiper-wrapper, .swiper-slide {
    max-height: 653px; 
  }
  
  @media (max-width: 500px) {
    .swiper-container, .swiper-wrapper, .swiper-slide, .swiper-slide img { 
      height: 556px;
    }
  }
}

.thumbnailsSlider {
  overflow: hidden;
  position: absolute;
  bottom: 24px; 
  left: 28px;
  height: 256px;
  width: 80px; 

  .thumbnailsSwiper {
    height: 256px; 
  }

  .swiper-wrapper > div {
    width:80px !important; 
  }

  .swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: 1px solid rgba(255, 255, 255, 0.40);
    opacity: 0.7; 
  }

  .swiper-slide img:hover {
    opacity: 1; 
  }

  .swiper-slide-active img {
    opacity: 1;
  }
}

@media (max-width: 992px) {
  .thumbnailsSwiper {
    display: none; 
  }
}

{% endstylesheet %}

{% javascript %} 

window.addEventListener('DOMContentLoaded', function() {
  var swiperThumbs = new Swiper(".thumbnailsSwiper", { 
      spaceBetween: 8,
      slidesPerView: 4, 
      freeMode: true,
      watchSlidesProgress: true,
      watchSlidesVisibility: true,
      direction: 'vertical',
      slideToClickedSlide: true,
      grabCursor: true,
      centeredSlides: true, 
      touchRatio: 0.2,
    });
  var swiperMain = new Swiper('.mainSwiper', {
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
      disabledClass: 'swiper-button-disabled',
      hiddenClass: 'swiper-button-hidden',
      prevEl: '.custom-swiper-button-prev',
      nextEl: '.custom-swiper-button-next',
    },
    grabCursor: true,
    breakpoints: {
    920: {
        pagination: false,
        },
    300: {
       pagination: {
        el: '.swiper-pagination',
        type: 'bullets',
        },
      } 
    }
  }); 
  swiperMain.controller.control = swiperThumbs; 
  swiperThumbs.controller.control = swiperMain; 
});
{% endjavascript %}
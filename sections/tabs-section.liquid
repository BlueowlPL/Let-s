{{ 'tabs-section.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
   .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <div class="tabs-section">
    {% for block in section.blocks %}
      <input type="radio" name="tabs-{{ section.id }}" id="tab{{ forloop.index }}" {% if forloop.first %}checked="checked"{% endif %}>
      <label for="tab{{ forloop.index }}">{{ block.settings.tab_title | escape }}</label>
      <div class="tab">
        {{ block.settings.tab_text }}
       {% if block.settings.vertical_alignment == 'zdjęcie' %}
          <div class="tab--image__container">
            {% for i in (1..block.settings.number_of_images) %}
              <div class="tab-image">
                {% assign image_id = 'image_' | append: i %}
                {% if block.settings[image_id] != blank %}
                  {{ block.settings[image_id] | image_url: width: 320, height: 240 | class:'card-media' | image_tag:
                    loading: 'lazy',
                    sizes: sizes,
                    widths: '165, 320'
                  }}
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {% elsif block.settings.vertical_alignment == 'tekst' %}
          <p>Tekst</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>



    
{% schema %}
  {
    "name": "Tabs section product",
    "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
    ],
      "blocks": [
    {
      "type": "block",
      "name": "tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab tytuł",
          "default": "Tytuł"
        },
        {
          "type": "text",
          "id": "tab_text",
          "label": "Tab tekst",
          "default": "Tekst"
        },
        {
          "type": "select",
          "id": "vertical_alignment",
          "label": "Zawartość taba",
          "options": [
            {
              "value": "zdjęcie",
              "label": "Zdjęcie"
            },
            {
              "value": "Tekst",
              "label": "Tekst"
            }
          ],
          "default": "Tekst"
        },
        {
          "type": "range",
          "id": "number_of_images",
          "label": "Ilość zdjęć w tabie(max: 3)",
          "min": 1,
          "max": 3,
          "default": 3
        },
        {
            "type": "image_picker",
            "id": "image_1",
            "label": "Zdjęcie 1"
          },
          {
            "type": "image_picker",
            "id": "image_2",
            "label": "Zdjęcie 2"
          },
          {
            "type": "image_picker",
            "id": "image_3",
            "label": "Zdjęcie 3"
          }
      ]
    }
    ],
    "presets": [
    {
      "name": "Tab sekcja"
    }
  ]
  }
{% endschema %}

<script>
  const tabs = document.querySelectorAll('.tab');
  const radios = document.querySelectorAll('input[type="radio"]');
  console.log(tabs)
  
  radios.forEach(radio => {
  radio.addEventListener('change', (event) => {
    // znajdź zakładkę, która odpowiada wybranej opcji
    const targetTab = document.querySelector(`#${event.target.id} + .tab`);
    // usuń aktywną klasę ze wszystkich zakładek
    tabs.forEach(tab => tab.classList.remove('active'));
    // dodaj aktywną klasę do wybranej zakładki
    targetTab.classList.add('active');
  });
});
</script>

















